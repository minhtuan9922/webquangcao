<footer>
	<div class="container">
		<div class="row">
			<div class="col-sm-4">
				<img class="img-responsive" src="image/catalog/opencart-logo.png">
				<p>{{ comment }}</p>
			</div>
			<div class="col-sm-4">
                <div class="embed-responsive embed-responsive-16by9">
					<iframe class="embed-responsive-item" src="{{ map }}" frameborder="0" style="border:0" allowfullscreen></iframe>
                </div>
            </div>
			<div class="col-sm-4">
				<h4>Thông tin liên hệ</h4>
				<div class="contact-item">
					<a href="tel:{{ telephone }}">
						<img src="image/catalog/phone-icon.png">
						<span>{{ telephone }}</span>
					</a>
				</div>
				<div class="contact-item">
					<a href="https://zalo.me/{{ telephone }}">
						<img src="image/catalog/zalo-icon.png">
						<span>{{ telephone }}</span>
					</a>
				</div>
				<div class="contact-item">
					<a href="mailto:{{ email }}">
						<img src="image/catalog/gmail-icon.png">
						<span>{{ email }}</span>
					</a>
				</div>
				<div class="contact-item">
					<a href="#">
						<img src="image/catalog/map-icon.png">
						<span>{{ address }}</span>
					</a>
				</div>
			</div>
		</div>
		<hr>
		<div class="text-center">
			<p>Copyright © 2018 quangcaothienlongtg.com. All rights reserved. Designed by QTS</p>
		</div>
	</div>
	<div class="icon-contact">
		<a href="tel:{{ telephone }}"><img src="image/catalog/icons8-ringer-volume-96.png"></a>
		<a href="https://zalo.me/{{ telephone }}"><img src="image/catalog/zalo-icon.png"></a>
	</div>
</footer>
{% for script in scripts %} 
<script src="{{ script }}" type="text/javascript"></script> 
{% endfor %} 

